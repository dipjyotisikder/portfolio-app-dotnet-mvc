@model folio.Areas.Portfolio.Models.ViewModels.HomeViewModel

@{
    /**/

    /**/

    ViewBag.Title = "SingleProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="banner_content text-center">
                <h2>project gallery</h2>
                <div class="page_link">
                    <a href="/">Home</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
@{
    List<string> data = null;
}
<!--================Projects Area =================-->
<section class="projects_area p_120">
    <div class="container">
        <div class="projects_fillter">
            <ul class="filter list">

                <li class="active" data-filter="*"><a href="#">All Categories</a></li>

            </ul>
        </div>
        <div class="projects_inner row">

            @foreach (var item in Model.Projects)
            {
                //var value = item.ProjectSkills.Select(c => c.Pskill.Category.Name).ToList().Take(1);
                //data.Add(value.ToString().Replace(" ", String.Empty));

                <div class="col-lg-4 col-sm-6 brand web">
                    <div class="projects_item">
                        <img class="img-fluid" src="@item.ProjectImages.ToList().FirstOrDefault().ImageUrl" alt="@item.ProjectImages.ToList().FirstOrDefault().Id">
                        <div class="projects_text">
                            <h3>@Html.ActionLink(item.Name, "SingleProject", "Home", new { id = item.Id }, new { hidefocus = "hidefocus" })</h3>

                            <p>Client Project</p>
                        </div>
                    </div>
                </div>


            }
        </div>
    </div>
</section>
<!--================End Projects Area =================-->