@model folio.Areas.Portfolio.Models.ViewModels.HomeViewModel

@{
    /**/

    /**/

    ViewBag.Title = "SingleProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="banner_content text-center">
                <h2>project gallery</h2>
                <div class="page_link">
                    <a href="/">Home</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
@{
    List<string> data = null;
}
<!--================Projects Area =================-->
<section class="projects_area p_120">
    <div class="container">
        <div class="projects_fillter">
            <ul class="filter list">

                <li class="active" data-filter="*"><a href="#">All Categories</a></li>

            </ul>
        </div>
        <div class="feature_inner row">
            @foreach (var item in Model.Projects)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="feature_item">
                        @if (item.ProjectImages.Count == 0)
                        {
                            <img class="img-responsive projectpic" src="~/Content/Portfolio/img/no.image.600x300.png" />

                        }
                        else
                        {
                            <img class="img-responsive projectpic" src="@item.ProjectImages.ToList().FirstOrDefault().ImageUrl" />

                        }

                        <h4>@Html.ActionLink(item.Name, "SingleProject", "Home", new { id = item.Id }, new { hidefocus = "hidefocus" }) </h4>
                        <p>@item.Description</p>
                    </div>
                </div>
            }
        </div>

    </div>
</section>
<!--================End Projects Area =================-->