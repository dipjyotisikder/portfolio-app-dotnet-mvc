@model folio.Areas.Admin.Models.ProfileViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_adminlayout.cshtml";
    ViewBag.profilepic = ViewBag.img;
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Your Profile
        </h1>
        @*<ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>*@
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">

                    <div class="box-header">
                        <h3 class="box-title text-center">Profile Picture</h3>
                    </div>
                    @if (ViewBag.img != null)
                    {
                        <img class="img-circle" src="@ViewBag.img" />
                    }
                    else
                    {
                        <img class="img-circle" src="~/Content/Admin/img/materialthumb.jpg" />
                    }
                    
                    <div class="box-footer">
                        @Html.ActionLink("Change", "ProfilePicture")
                    </div>
                </div>
               
            </div>

        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title text-center">Profile</h3>
                    </div>

                    <div class="box-body">
                        @using (Html.BeginForm("Edit", "AdminProfile", new { area = "Admin" }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                                <div class="col-md-12">
                                    @*@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })*@
                                    @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                                <div class="col-md-12">
                                    @*@Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })*@
                                    @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                <div class="col-md-12">
                                    @*@Html.TextBoxFor(m => m.Email, new { @class = "form-control disabled" })*@
                                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label" })
                                <div class="col-md-12">
                                    @*@Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })*@
                                    @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.CurrentAddress, new { @class = "col-md-2 control-label" })
                                <div class="col-md-12">
                                    @*@Html.TextBoxFor(m => m.CurrentAddress, new { @class = "form-control" })*@
                                    @Html.EditorFor(m => m.CurrentAddress, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.CurrentAddress, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.PermanentAddress, new { @class = "col-md-2 control-label" })
                                <div class="col-md-12">
                                    @*@Html.TextBoxFor(m => m.PermanentAddress, new { @class = "form-control" })*@
                                    @Html.EditorFor(m => m.PermanentAddress, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.PermanentAddress, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="box-footer">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                            
                        }
                    </div>
                    <!-- /.box-body -->
                </div>

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->

</div>